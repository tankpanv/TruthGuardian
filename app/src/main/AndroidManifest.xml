<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TruthGuardianApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TruthGuardian"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.ai.AIChatActivity"
            android:exported="false"
            android:theme="@style/Theme.TruthGuardian.NoActionBar" />
        <activity
            android:name=".ui.debunk.DebunkArticleListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.debunk.DebunkArticleDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.debunk.CreateDebunkActivity"
            android:exported="false" />
        <activity
            android:name=".ui.debunk.CreateDebunkArticleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.debunk.EditDebunkActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.TruthGuardian.NoActionBar" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TruthGuardian.NoActionBar" />
        <activity
            android:name=".ui.message.MessageDetailActivity"
            android:exported="false"
            android:label="@string/title_message_detail" />
        <activity
            android:name=".ui.debunk.MyDebunkArticleListActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>